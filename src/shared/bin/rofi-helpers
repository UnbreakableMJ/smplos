#!/bin/bash
# smplOS rofi helpers -- source this in rofi menu scripts
# Usage: source rofi-helpers (it's on PATH in /usr/local/bin)

ROFI_THEME="${ROFI_THEME:-$HOME/.config/rofi/smplos.rasi}"

# Run rofi in dmenu mode with smplOS theme and fuzzy matching
# Usage: rofi_menu [-p PROMPT] [-mesg MSG] [extra rofi args...]
rofi_menu() {
  local args=(-dmenu -i -matching fuzzy -sorting-method fzf)
  [[ -f "$ROFI_THEME" ]] && args+=(-theme "$ROFI_THEME")
  args+=("$@")
  rofi "${args[@]}"
}

# Run rofi as an application launcher (drun mode)
rofi_drun() {
  local args=(-show drun -show-icons)
  [[ -f "$ROFI_THEME" ]] && args+=(-theme "$ROFI_THEME")
  args+=("$@")
  rofi "${args[@]}"
}
